<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/control_event_points_range"
        android:layout_toStartOf="@+id/control_event_points_range"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/control_event_type_and_week"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                tools:text="Лабораторная работа"/>

        </LinearLayout>

        <TextView
            android:id="@+id/control_event_subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:visibility="gone"
            tools:text="Теория фантазирования"/>

        <TextView
            android:id="@+id/control_event_entered_by"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            tools:text="Мастер фантизирования"/>

    </LinearLayout>

    <TextView
        android:id="@+id/control_event_points_range"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/control_event_achieved_points"
        android:layout_toStartOf="@id/control_event_achieved_points"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        tools:text="-9 - 800"/>

    <TextView
        android:id="@id/control_event_achieved_points"
        android:layout_width="50dp"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_centerVertical="true"
        android:background="@color/colorPrimaryDark"
        tools:text="82"/>

</RelativeLayout>