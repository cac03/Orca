<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="192dp"
    android:background="?attr/colorPrimaryDark"
    android:padding="16dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/nav_header_week_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        tools:text="18 week"/>

    <TextView
        android:id="@+id/nav_header_week_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:layout_below="@id/nav_header_week_number"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        tools:text="1-й знаменатель"/>

    <TextView
        android:id="@+id/nav_header_student_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_above="@+id/nav_header_student_group"
        tools:text="Арина Мюллер"/>

    <TextView
        android:id="@+id/nav_header_student_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:textColor="@android:color/white"
        tools:text="Мп-666"/>
</RelativeLayout>
